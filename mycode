#####pick number of decks                    DONE

numdeck = input("How many decks would you like to play with? Pick numbers 2 thru 6. ")


if numdeck == ("2"):

    url = "https://deckofcardsapi.com/api/deck/new/shuffle/?deck_count=2"

payload={}
headers = {}

response2 = requests.request("GET", url, headers=headers, data=payload)

print(response2.text)


