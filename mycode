##############draw cards




hit = input("\n To draw your first 2 cards enter Hit: ")
if hit == ("Hit"):
	url = "https://deckofcardsapi.com/api/deck/new/draw/?count=2"
	payload={}
	headers = {}
	response = requests.request("GET", url, headers=headers, data=payload)
	print(response.text)
