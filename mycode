########imports
import os
import random
import requests
import json
import urllib


#####pick number of decks                    DONE


numDeck = input("\n How many decks would you like to play with? Pick numbers 1 thru 6. ")

urlnumDeck = "https://deckofcardsapi.com/api/deck/new/shuffle/?deck_count=" + str(numDeck)

payloadnumDeck={}
headersnumDeck = {
  'Accept': 'application/json'
}

newDeck = requests.request("GET", urlnumDeck, headers=headersnumDeck, data=payloadnumDeck)

deckJ = newDeck.json()
deck = deckJ['deck_id']

print("Your deck id is: " + str(deck) + " and contains " + str(numDeck) + " decks.")



#######get first 2 cards

hit = input("To draw your first 2 cards type Hit: ")
if hit == ("Hit"):
	url = "https://deckofcardsapi.com/api/deck/new/draw/?count=2"
	payload={}
	headers = {}
	firstcards = requests.request("GET", url, headers=headers, data=payload)
	print(firstcards.text)
else:
	print("Sorry. Type Hit.")
	hit = input("To draw your first 2 cards enter Hit: ")
	url = "https://deckofcardsapi.com/api/deck/new/draw/?count=2"
	payload={}
	headers = {}
	firstcards = requests.request("GET", url, headers=headers, data=payload)
	print(firstcards.text)
	
	
	
	
	
	
	
import requests

